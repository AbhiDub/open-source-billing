<span class="btn-activity">Activities</span>
<aside id="activity-sidebar">
  <div class="activity-scroll-holder mCustomScrollbar">
    <!--- activities list--->

    <div class="status-info">
      <h5> <%= link_to t('views.common.active'), "?status=active&per=#{@per_page}", :class => "get_actives #{'active' if params[:status] == 'active'}" %>
        <span class="item_counts" id="actives">(<%= Tax.unarchived.size %>)</span></h5>


    </div>
    <div class="status-info">
      <h5> <%= link_to t('views.common.archived'), "?status=archived&per=#{@per_page}", :class => "get_archived #{'active' if params[:status] == 'archived'}" %>
        <span class="item_counts" id="archives">(<%= Tax.archived.size %>)</span>
      </h5>
    </div>
    <div class="status-info">
      <h5>  <%= link_to t('views.common.deleted'), "?status=deleted&per=#{@per_page}", :class => "get_deleted #{'active' if params[:status] == 'deleted'}" %>
        <span class="item_counts" id="deletes">(<%= Tax.only_deleted.size %>)</span></h5>
    </div>
  </div>
</aside>
    <!--- content --->
    <div id="main-content">
      <!--- main content --->
      <div class="row">
        <!--- breadcrum Bar --->
        <div class="col s12 breadcrum-bar">
          <div class="card-white-panel ">
            <div id="sort_direction" style="display: none;"><%= params[:direction] %></div>
            <%= hidden_field_tag :direction, params[:direction] %>
            <%= hidden_field_tag :sort, params[:sort] %>

            <h3><%= t('views.taxes.taxes') %>  <%= link_to "/ #{@status.humanize}",taxes_url(status: @status) %></h3>
          </div>
        </div>

        <div class="invoice-box tax-box mCustomScrollbar clearfix">
          <%= form_tag "taxes/bulk_actions", {method: :get, id: "bulk_action_form"} do -%>

        <% @taxes.group_by { |d| d.group_date }.each do |date, taxes| %>

        <p><span class="activity-date"><%=date%></span></p>

          <div class="clearfix">
            <%
              no_record_message = "You haven't created any tax yet. Please click on New Tax button to create new tax."
              if params[:status] == "archived" || @action == "recovered from archived" ||  @action == "deleted from archived"
                no_record_message = "You haven't any archived tax."
              elsif params[:status] == "deleted" || @action == "recovered from deleted"
                no_record_message = "You haven't any deleted tax."
              end
            %>
            <% if taxes.length > 0 %>
                <%= render partial: 'taxes',:collection => taxes, as: :taxis %>
            <% else %>
                <tr>
                  <td colspan="4">
                    <div class="no_record_container"><%= no_record_message %></div>
                  </td>
                </tr>
          <% end %>

                </div>
        <% end %>
              <%= render partial: 'bulk_actions'%>
        <% end %>
            </div>
      </div>
    </div>


