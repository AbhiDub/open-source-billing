<%= render 'company_activity'%>
<div id="main-content">
  <!--- main content --->
  <div class="row">
    <!--- breadcrum Bar --->
    <div class="col s12 breadcrum-bar">
      <div class="card-white-panel ">
        <%= link_to raw('<i class="material-icons">add</i>'), new_company_path, remote: true, class: 'pull-right', title: 'Add' %>
        <h3>
          Companies
          <%= link_to "/ #{@status.humanize}",companies_url(status: @status) %>
        </h3>
      </div>
    </div>
    <div class="invoice-box mCustomScrollbar clearfix">
      <!--- Invoices Card Title--->
      <%= form_tag "companies/bulk_actions", {method: :get, id: "bulk_action_form"} do -%>
          <% @companies.group_by { |d| d.group_date }.each do |date, companies| %>
              <p><span class="activity-date"><%= date %></span></p>
              <div class="clearfix">
                <%= render partial: 'company_card', collection: companies, as: :company %>
              </div>
          <% end %>
          <%= render partial: 'bulk_actions'%>

      <% end %>

    </div>
  </div>
</div>