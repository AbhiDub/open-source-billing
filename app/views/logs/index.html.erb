<%= render 'log_activity'%>
<div id="main-content" class='<%= "#{ 'side-show' if side_nav_opened?}"%>'>
  <!--- main content --->
  <div class="row">
    <!--- breadcrum Bar --->
    <div class="col s12 breadcrum-bar">
      <div class="card-white-panel">
        <h3>Time Tracking : <%= link_to raw('<span class="text-color">Timesheet</span>'), logs_path %></h3>
      </div>
    </div>

    <div class="invoice-box log-box mCustomScrollbar clearfix">
        <div class="row month" id="calendar_divs">
          <div class="col s8 m8" id="calendar"></div>
          <div class="col s4 m4" id="calendar_form">
            <%= render 'new_form' %>
          </div>
        </div>

        <div class="row">
          <div class="col s12">
            <div class="content_middle logs_table">
              <%= render 'logs/logs_table' %>
            </div>
          </div>

        </div>
    </div>
  </div>
</div>