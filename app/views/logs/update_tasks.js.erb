$selectDropdown = $("#log_task_id").empty().html(' ');
<% if @tasks %>
    $selectDropdown.append($("<option></option>").attr("value",'').text('Select a task'));
    <% @tasks.each do |task| %>
        $selectDropdown.append($("<option></option>").attr("value",<%= task.id %>).text("<%= task.name.titleize %>"));
    <% end %>
<% end %>
$('select').material_select();
$selectDropdown.trigger('contentChanged');

$('select').on('contentChanged', function() {
    $(this).material_select();
});