<div class="col s12 l12 xl7">

  <div class="dashboard-whitebox">
    <div class="row">
      <div class="col m6 total-income">
        <h4><%= t("views.dashboard.ytd_income") %></h4>
        <div class="amount">
          <%= number_to_currency_dashboard(@ytd_income,{unit: @currency.present? ? @currency.unit : "$", unit_size: @unit_size, dom: 'span'})  %>
        </div>
        <h4><%= t("views.dashboard.amount_billed") %></h4>
        <div class="amount">
          <%= number_to_currency_dashboard(@amount_billed,{unit: @currency.present? ? @currency.unit : "$", unit_size: @unit_size, dom: 'span'}) %>
        </div>
        <h4><%= t("views.dashboard.total_outstanding") %></h4>
        <div class="amount">
          <%= number_to_currency_dashboard(@outstanding_invoices, {unit: @currency.present? ? @currency.unit : "$", unit_size: @unit_size, dom: 'span'}) %>
        </div>
      </div>
      <div class="col m6">
        <h4>Aged AR </h4>
        <div class="agedWrapper">
          <div class="aged-ar">
            <strong>0 - 30 <em><%= t("views.dashboard.days_old") %></em> </strong>
            <span>
              <%= value =  number_to_currency_dashboard(@aged_invoices.attributes["zero_to_thirty"],{unit: @currency.present? ? @currency.unit : "$", unit_size: @unit_size, dom: 'em'}) || "#{t('currency_unit')}0.00" %>
            </span>
          </div>
          <div class="progress">
            <div class="determinate" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= ((@aged_invoices.attributes["zero_to_thirty"] * 100)/@aged_invoices_total).round %>%;">
              <span class="sr-only">60% Complete</span>
            </div>
          </div>
        </div>
        <div class="agedWrapper">
          <div class="aged-ar">
            <strong>30 - 60 <em><%= t("views.dashboard.days_old") %></em> </strong>
            <%= number_to_currency_dashboard(@aged_invoices.attributes["thirty_one_to_sixty"], {unit: @currency.present? ? @currency.unit : "$", unit_size: @unit_size, dom: 'em'}) || "#{t('currency_unit')}0.00" %>
          </div>
          <div class="progress">
            <div class="determinate" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= ((@aged_invoices.attributes["thirty_one_to_sixty"] * 100)/@aged_invoices_total).round %>%;">
              <span class="sr-only">80% Complete</span>
            </div>
          </div>
        </div>
        <div class="agedWrapper">
          <div class="aged-ar">
            <strong>over 90 <em><%= t("views.dashboard.days_old") %></em> </strong>
            <span><%= number_to_currency_dashboard(@aged_invoices.attributes["sixty_one_to_ninety"], {unit: @currency.present? ? @currency.unit : "$", unit_size: @unit_size, dom: 'em'}) || "#{t('currency_unit')}0.00" %></span>
          </div>
          <div class="progress">
            <div class="determinate" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= ((@aged_invoices.attributes["sixty_one_to_ninety"] * 100)/@aged_invoices_total).round %>%;">
              <span class="sr-only">100% Complete</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="graph-holder">
      <%= image_tag('invoice-graph.jpg', class: "responsive-img", alt: "graph")%>
    </div>
  </div>
</div>