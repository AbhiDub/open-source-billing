<%= render 'task_activity'%>
<div id="main-content" class='<%= "#{ 'side-show' if side_nav_opened?}"%>'>
  <!--- main content --->
  <div class="flex-wrapper">
    <!--- breadcrum Bar --->
    <div class="flex-item breadcrum-bar">
      <div class="card-white-panel">
        <%= link_to raw('<i class="material-icons">add</i>'), new_task_path, remote: true, class: 'pull-right', title: 'Add' %>
        <h3>Time Tracking : <%= link_to raw('<span class="text-color">Tasks</span>'), tasks_url %></h3>
      </div>
    </div>
  </div>
  <div class="invoice-box task-box mCustomScrollbar clearfix">
      <!--- Invoices Card Title--->
      <%= form_tag bulk_actions_tasks_path, {method: :get, id: "bulk_action_form"} do -%>
         <div class="search_result_container">
           <% @tasks.group_by { |d| d.group_date }.each do |date, tasks| %>
               <p><span class="activity-date"><%= date %></span></p>
               <div class="flex-wrapper">
                 <%= render partial: 'task_card', collection: tasks, as: :task %>
               </div>
           <% end %>
         </div>
          <%= render partial: 'bulk_actions'%>
      <% end %>

  </div>
</div>
