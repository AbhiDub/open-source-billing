<!--- Activity sidebar --->
<span class="btn-activity">Activities</span>

<aside id="activity-sidebar">
  <div class="activity-scroll-holder mCustomScrollbar">
    <div class="status-info active">
      <h5>
        <%= link_to t('views.common.active'), "tasks?status=active#{query_string(params.except(:page).merge(per: @per_page))}", :class => "get_actives #{'active' if params[:status] == 'active'}" %>
        <span id="actives">(<%= get_count(params.merge(status: 'unarchived', user: current_user, current_company: session['current_company'])) %>)</span>
      </h5>
    </div>
    <div class="status-info">
      <h5>
        <%= link_to t('views.common.archive'), "tasks?status=archived#{query_string(params.except(:page).merge(per: @per_page))}", :class => "get_actives #{'active' if params[:status] == 'archived'}" %>
        <span id="actives">(<%= get_count(params.merge(status: 'archived', user: current_user, current_company: session['current_company'])) %>)</span>
      </h5>
    </div>
    <div class="status-info">
      <h5>
        <%= link_to t('views.common.deleted'), "tasks?status=deleted#{query_string(params.except(:page).merge(per: @per_page))}", :class => "get_actives #{'active' if params[:status] == 'deleted'}" %>
        <span id="actives">(<%= get_count(params.merge(status: 'only_deleted', user: current_user, current_company: session['current_company'])) %>)</span>
      </h5>
    </div>
    <div class="status-info">
      <h5>
        <%= link_to 'Project', projects_url %>
        <span id="actives">(<%= get_project_count %>)</span>
      </h5>
    </div>
    <div class="status-info">
      <h5>
        <%= link_to 'Staff', staffs_path %>
        <span id="actives">(<%= get_staff_count %>)</span>
      </h5>
    </div>
  </div>

</aside>