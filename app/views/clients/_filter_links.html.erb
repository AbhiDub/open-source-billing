<ul>
  <li class="grid_control_sep sep_right">
    <%= link_to t("views.common.active"), "clients/filter_clients?status=active#{query_string(params.merge(per: session["#{controller_name}-per_page"]))}", :remote => true, :class => "get_actives active" %>
    <span class="item_counts" id="actives">(<%= get_count(params.merge(status: 'unarchived', user: current_user, current_company: session['current_company'])) %>)</span>
  </li>

  <li class="grid_control_sep sep_right">
    <%= link_to t("views.common.archived"), "clients/filter_clients?status=archived#{query_string(params.merge(per: session["#{controller_name}-per_page"]))}", :remote => true, :class => "get_archived" %>
    <span class="item_counts" id="archives">(<%= get_count(params.merge(status: 'archived', user: current_user, current_company: session['current_company'])) %>)</span>
  </li>

  <li>
    <%= link_to t("views.common.deleted"), "clients/filter_clients?status=deleted#{query_string(params.merge(per: session["#{controller_name}-per_page"]))}", :remote => true, :class => "get_deleted" %>
    <span class="item_counts" id="deletes">(<%= get_count(params.merge(status: 'only_deleted', user: current_user, current_company: session['current_company'])) %>)</span>
  </li>
</ul>
