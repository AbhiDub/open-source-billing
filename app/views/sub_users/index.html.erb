<%= render 'user_activity'%>
<div id="main-content">
  <!--- main content --->
  <div class="row">
    <!--- breadcrum Bar --->
    <div class="col s12 breadcrum-bar">
      <div class="card-white-panel ">
        <%= link_to raw('<i class="material-icons">add</i>'), new_sub_user_path, remote: true, class: 'pull-right', title: 'Add' %>
        <h3>
          Users
        </h3>

      </div>
    </div>
    <div class="invoice-box mCustomScrollbar clearfix">
      <!--- Invoices Card Title--->
          <% @sub_users.group_by { |d| d.group_role }.each do |role, users| %>
              <p><span class="activity-date"><%= role %></span></p>
              <div class="clearfix">
                <%= render partial: 'user_card', collection: users, as: :user %>
              </div>
          <% end %>
    </div>
  </div>
</div>