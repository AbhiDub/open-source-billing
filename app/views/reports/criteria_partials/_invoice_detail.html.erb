<%= form_tag "/reports/data/#{@report.report_name}", :method => :get, :remote => true, :id => "reports_form" do %>
    <div class="row">
      <div class="input-field col s12 m6 xl2  datepicker">
        <input name="criteria[from_date]" type="text" id="from_date" readonly value="<%= 1.month.ago.to_date.strftime(get_date_format) %>"/>
        <i class="material-icons">date_range</i>
        <label for="from_date" class="active"><%= t('views.reports.date_range') %></label>
      </div>
      <div class="input-field col s12 m6 xl2 datepicker">
        <input name="criteria[to_date]" type="text" id="to_date" readonly value="<%= Date.today.strftime(get_date_format) %>"/>
        <i class="material-icons">date_range</i>
        <label for="to_date" class="active"><%= t('views.reports.to') %></label>
      </div>
      <div class="input-field col s12 m6 xl3">
        <%= select_tag "criteria[date_to_use]", options_for_select(INVOICE_DATE_TO_USE.map{|k, v| [t('views.invoices.' + v), v]}),
                       {:class => "invoice-status"} %>
        <label><%= t('views.invoices.date_to_use') %></label>
      </div>
      <div class="input-field col s12 m6 xl3">
        <%= select_tag "criteria[invoice_status]", options_for_select(INVOICE_STATUS.map{|k, v| [t('views.invoices.' + v), v]}),
                       {:prompt => t('views.common.all'), :class => "invoice-status"} %>
        <label><%= t('views.invoices.invoice_status') %></label>
      </div>
      <div class="col s12 m1">
        <%= submit_tag t('views.common.go'), :class => "report_update hidden" %>
        <a href="#" class="icon-done" onclick="$('.report_update').click();"><i class="material-icons">done</i></a>
      </div>
    </div>
<% end %>
