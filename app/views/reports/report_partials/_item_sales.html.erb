<div class="reports">
  <div class="content_middle">

    <div class="report_content_header">
      <div class="report_content_heading">
        <h1><%= t('views.reports.item_sales') %></h1>
      </div>

      <div class="content_header_data">
        <div class="header_data_left">
          <div class="header_data_detail">
            <ul>
              <li class="header_name"><%= @report.item_name %></li>
              <li class="header_duration"><%= @report.period %></li>
            </ul>
          </div>
        </div>
      </div>
      <!-- content_header_data -->
    </div>
    <!-- report_content_header -->

    <%= render 'reports/report_partials/format_links'%>

    <div class="item_sales">
      <div class="grid_table">
        <%# unless @report.report_data.blank? %>
        <%# @report.report_data.each do |item| %>
        <!--<h2><%#= item.item_name || '' %></h2>-->
        <table cellpadding="0" cellspacing="0" class="table_listing client_report_listing">
          <colgroup>
            <col class="one"/>
            <col class="two"/>
            <col class="three"/>
            <col class="four"/>
            <col class="five"/>
           </colgroup>
          <thead>
          <tr>
            <th class="align_left"><%= t('views.items.item_name') %></th>
            <th class="align_right"><%= t('views.reports.total_qty_sold') %></th>
            <th class="align_right {sorter:'thousands'}"><%= t('views.reports.total_amount') %></th>
            <th class="align_right {sorter:'thousands'}"><%= t('views.reports.total_discount') %></th>
            <th class="align_right {sorter:'thousands'}"><%= t('views.reports.net_total') %></th>
          </tr>
          </thead>
          <tbody>
          <% unless @report.report_data.blank? %>
              <% @report.report_data.each do |item| %>
                  <tr>
                    <td class="align_left"><%= item.item_name %></td>
                    <td class="align_center"><%= item.attributes["item_quantity"].to_i %></td>
                    <td class="align_right currency"><%= number_to_currency(item.attributes["total_amount"],unit: item.attributes["currency_code"]) %></td>
                    <td class="align_right currency"><%= number_to_currency(item.attributes["discount_amount"],unit: item.attributes["currency_code"]) %></td>
                    <td class="align_right currency"><%= number_to_currency(item.attributes["net_total"],unit: item.attributes["currency_code"]) %></td>
                  </tr>
              <% end %>
              <tfoot>
                <% is_first = true %>
                <% @report.report_total.each do |total| %>
                  <tr>
                    <td class="align_left"><%= is_first ? t("views.common.total") : '' %></td>
                    <td class="align_center"><%= total["item_quantity"].to_i %></td>
                    <td class="align_right currency"><%= number_to_currency(total["total_amount"],unit:total["currency_code"]) %></td>
                    <td class="align_right currency"><%= number_to_currency(total["discount_amount"],unit:total["currency_code"]) %></td>
                    <td class="align_right currency"><%= number_to_currency(total["net_total"],unit:total["currency_code"]) %></td>
                  </tr>
                  <%is_first = false %>
                <% end %>
              </tfoot>
          <% else %>
              <tr>
                <td colspan="6"><%= t('views.reports.report_no_data') %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <%# end %>
        <%# end %>
      </div>
      <!--grid_table-->
    </div>
    <!--revnue_by_client-->


    <div class="content_bottom">
      <div class="report_footer">

      </div>
      <!-- report_footer -->
    </div>
    <!--content_bottom-->

  </div>
  <!--content_middle-->
</div><!--reports-->