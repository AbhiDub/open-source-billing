<tr class="fields">
  <td class="align_center">
    <div class="action_links">
      <%= f.hidden_field :_destroy%>
      <a data-association="tasks" class="remove_task remove_nested_fields" href="javascript:void(0)" title=" Delete this task"></a>
      <a class="sort_icon" href="javascript:" title="Drag this task to your desired location in this project"></a>
    </div>
  </td>
  <td class="align_left">
    <%= f.select :task_id, options_for_select(load_tasks_for_project, selected: f.object),  {:prompt => "",:include_blank => ""}, {"data-placeholder" => t('views.projects.select_a_task'), :class => "tasks_list medium chzn-select grid_large_medium", "data-form-container" => "tasks_holder", "data-dropdown-width" => "300", :required => ""} %>
  </td>

  <%= f.hidden_field :name, :class => 'task_name' %>
  <%= f.hidden_field :billable, :class => 'billable' %>
  <td class="align_left">
    <%= f.text_field :description, :class => 'grid_large description' %>
  </td>
  <td class="align_right">
    <%= f.text_field :rate, :class => 'grid_small align_right rate' %>
  </td>
</tr>