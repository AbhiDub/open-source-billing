<%= render 'project_activity'%>
<div id="main-content" class='mCustomScrollbar <%= "#{ 'side-show' if side_nav_opened?}"%>'>
  <div class="row">
    <div class="col s12 task-detail">
      <!--- breadcrum Bar --->
      <div class="breadcrum-bar activebar">
        <div class="card-white-panel">
          <h3>Project Detail</h3>
          <div class="page-action-btn-group">
            <a href="#" class="edit-detail"><i class="material-icons">create</i></a>
            <a href="#" onclick="$('.send_submit').click();" title="Save" class="submitProject hidden"> <i class="material-icons" >done</i></a>

            <%= link_to raw("<i class='material-icons'>delete</i>"),@project, method: :delete, data:{confirm: 'Are you sure?' }, title: 'Delete' %>
          </div>
        </div>
      </div>
      <!--- breadcrum Bar --->
      <div class="breadcrum-bar mainbar">
        <div class="card-white-panel ">

          <%= link_to raw('<i class="material-icons">arrow_back</i>'), projects_path %>
          <h3>Time Tracking :
            <select onchange="location = this.value;">
              <% @projects.each do |project|%>
                  <option value="<%= project_path(project) %>" <%= "#{ 'selected' if project.id.eql?(@project.id)}"%> ><%= project.project_name %></option>
              <% end %>
            </select>
          </h3>
          <a href="#" class="btn-slide right">
            <i class="material-icons">keyboard_arrow_up</i>
          </a>
        </div>
      </div>
      <%= render 'project_detail' %>
    </div>
  </div>

  <% if @project_tasks.present?  %>
      <div class="row">
        <div class="col s12 task-detail">
          <!--- breadcrum Bar --->
          <div class="task-box clearfix">
            <!--- Invoices Card Title--->
            <div class="view-btn-group clearfix">
              <span class="activity-date left">Today</span>
              <div class="btn-inline right">
                <div class="btn-icons">
                  <a href="#"><i class="material-icons">date_range</i></a>
                  <a href="#" class="active"><i class="material-icons">view_module</i></a>
                  <a href="#"><i class="material-icons">view_list</i></a>
                </div>
                <div class="btn-calender">
                  <a href="#">Day</a>
                  <a href="#">Week</a>
                  <a href="#" class="active">Month</a>
                </div>
              </div>
            </div>
            <div class="flex-wrapper">
              <!--- task Card --->
              <% @project_tasks.group_by { |d| d.group_date }.each do |date, tasks| %>
                  <%= render partial: 'tasks', collection: tasks, as: :task %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>
