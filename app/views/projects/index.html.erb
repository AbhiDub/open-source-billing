<%= render 'project_activity'%>
<div id="main-content" class='<%= "#{ 'side-show' if side_nav_opened?}"%>'>
  <!--- main content --->
  <div class="row">
    <!--- breadcrum Bar --->
    <div class="col s12 breadcrum-bar">
      <div class="card-white-panel">
        <%= link_to raw('<i class="material-icons">add</i>'), new_project_path, remote: true, class: 'pull-right', title: 'Add' %>
        <h3>Time Tracking : <%= link_to raw('<span class="text-color">Projects</span>'), projects_url %></h3>
      </div>
    </div>

    <div class="invoice-box project-box mCustomScrollbar clearfix">
      <!--- Invoices Card Title--->
      <%= form_tag "projects/bulk_actions", {method: :get, id: "bulk_action_form"} do -%>
          <% @projects.group_by { |d| d.group_date }.each do |date, projects| %>
              <p><span class="activity-date"><%= date %></span></p>
              <div class="clearfix">
                <%= render partial: 'project_card', collection: projects, as: :project %>
              </div>
          <% end %>
          <%= render partial: 'bulk_actions'%>
      <% end %>

    </div>
  </div>
</div>