<div class="content_top">
  <div class="primary_heading">
    <h1>Price Plans</h1>
  </div>
  <div class="isconnected">
    <% if current_user.connected? %>
        <span class="label label-info">You are connected with Stripe!</span>
    <% else %>
        <%= active_link_to t("header.links.setting.stripe_page"), stripe_page_path, class: 'btn btn-info btn-small' %>
        <%#= link_to 'Connect to Stripe', "https://connect.stripe.com/oauth/authorize?response_type=code&client_id=#{Rails.configuration.stripe[:client_id]}&scope=read_write&stripe_user[email]=#{current_user.email}", class: ' btn btn-primary stripe-connect' %>
    <% end %>
  </div>

</div>
<div class="content_middle">
  <div class="row plans-list">
    <% Plan.all.each do |plan| %>
        <% class_selected = 'selected-plan' if current_user.current_plan== plan  %>
        <div class="span2 center-align <%= class_selected %>">
          <div class="config-box config-box-1 wow fadeIn" data-wow-delay="0.4s">
            <div class="config-box-head clearfix">
              <h5 class="v-align">
                <span class="text-light"><%= plan.name %></span>
                <span class="text-bold">$<%= plan.amount %></span>
              </h5>
            </div>
            <div class="config-box-data">
              <ul class="config-box-list">
                <li>
                  Lorem ipsum dolor sit
                </li>
                <li>
                  Lorem ipsum dolor sit
                </li>
                <li>
                  Lorem ipsum dolor sit
                </li>
                <li class="hidden-xs">
                  &nbsp;
                </li>
                <li>
                  <% if plan == @plan %>
                      <%= link_to "Unsubscribe", unsubscribe_path(@plan.id, current_user.subscription), class: 'btn-info btn' unless @plan.is_free_plan? %>
                  <% else %>
                      <%= link_to "Upgrade", upgrade_path(plan.id, current_user.subscription), class: 'btn-info btn' %>
                  <% end %>

                </li>
              </ul>

            </div>
          </div>

        </div>
    <% end %>
  </div>
</div>

