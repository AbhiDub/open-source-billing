<div class="content_top">
  <div class="primary_heading">
    <h1>Price Plans</h1>
  </div>
  <% if current_user.connected? %>
      <p>Connected</p>
  <% else %>
      <%= link_to 'Connect to Stripe', "https://connect.stripe.com/oauth/authorize?response_type=code&client_id=#{Rails.configuration.stripe[:client_id]}&scope=read_write&stripe_user[email]=#{current_user.email}", class: ' btn btn-primary stripe-connect' %>
  <% end %>
</div>
<div class="content_middle">
  <div class="row">
    <% Plan.all.each do |plan| %>
        <div class="span2">
          <div class="config-box config-box-1 wow fadeIn" data-wow-delay="0.4s">
            <div class="config-box-head clearfix">
              <h5 class="v-align">
                <span class="text-light"><%= plan.name %></span>
                <span class="text-bold">$<%= plan.amount %></span>
              </h5>
            </div>
            <div class="config-box-data">
              <ul class="config-box-list">
                <li>
                  Lorem ipsum dolor sit
                </li>
                <li>
                  Lorem ipsum dolor sit
                </li>
                <li>
                  Lorem ipsum dolor sit
                </li>
                <li class="hidden-xs">
                  &nbsp;
                </li>
                <li>
                  <% if plan == @plan %>
                      <span class="badge badge-success"> <%= "Your current plan ($#{plan.amount})" %></span>
                      <br/>
                      <%= link_to "Unsubscribe", unsubscribe_path(@plan.id, current_user.subscription.subscription_id), class: 'btn-info btn' unless @plan.is_free_plan? %>
                  <% else %>
                      <%= link_to "Upgrade", upgrade_path(plan.id, current_user.subscription.subscription_id), class: 'btn-info btn' %>
                  <% end %>

                </li>
              </ul>

            </div>
          </div>

        </div>
    <% end %>
  </div>
</div>

