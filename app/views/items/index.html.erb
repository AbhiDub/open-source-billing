<span class="btn-activity">Activities</span>
<aside id="activity-sidebar">
  <div class="activity-scroll-holder mCustomScrollbar">
    <!--- activities list--->
    <div class="status-info active">
      <h5> <%= link_to t('views.common.active'), "items?status=active#{query_string(params.except(:page).merge(per: @per_page))}", :class => "get_actives #{'active' if params[:status] == 'active'}" %>
        <span>(<%= get_count(params.merge(status: 'unarchived', user: current_user, current_company: session['current_company'])) %>)</span></h5>
      <div class="amount"><%= @items_activity[:active_items_total] %></div>
      <% @items_activity[:active_items_progress].each do |date, amount| %>
          <div class="agedWrapper">
            <div class="aged-ar">
              <small><%= date %></small>
              <span><%= amount %><small> </small></span>
            </div>
            <div class="progress">
              <div class="determinate" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= aged_progress_width(amount, @items_activity[:active_items_total]) %>%;">
                <span class="sr-only">60% Complete</span>
              </div>
            </div>
          </div>
      <% end %>

    </div>


    <div class="status-info">
      <h5><%= link_to t('views.common.archived'), "items?status=archived#{query_string(params.except(:page).merge(per: @per_page))}", :class => "get_deleted #{'active' if params[:status] == 'archived'}" %>
        <span>(<%= get_count(params.merge(status: 'archived', user: current_user, current_company: session['current_company'])) %>)</span></h5>
      <div class="amount"><%= @items_activity[:archived_items_total] %></div>
      <% @items_activity[:archived_items_progress].each do |date, amount| %>
          <div class="agedWrapper">
            <div class="aged-ar">
              <small><%= date %></small>
              <span><%= amount %><small> </small></span>
            </div>
            <div class="progress">
              <div class="determinate" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= aged_progress_width(amount, @items_activity[:archived_items_total]) %>%;">
                <span class="sr-only">60% Complete</span>
              </div>
            </div>
          </div>
      <% end %>

    </div>
    <div class="status-info">

      <h5> <%= link_to t('views.common.deleted'), "items?status=deleted#{query_string(params.except(:page).merge(per: @per_page))}", :class => "get_archived #{'active' if params[:status] == 'deleted'}" %>
        <span>(<%= get_count(params.merge(status: 'only_deleted', user: current_user, current_company: session['current_company'])) %>)</span></h5>
      <div class="amount"><%= @items_activity[:deleted_items_total] %></div>
      <% @items_activity[:deleted_items_progress].each do |date, amount| %>
          <div class="agedWrapper">
            <div class="aged-ar">
              <small><%= date %></small>
              <span><%= amount %><small> </small></span>
            </div>
            <div class="progress">
              <div class="determinate" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= aged_progress_width(amount, @items_activity[:deleted_items_total]) %>%;">
                <span class="sr-only">60% Complete</span>
              </div>
            </div>
          </div>
      <% end %>

    </div>
  </div>
</aside>
    <!--- content --->
    <div id="main-content">
      <!--- main content --->
      <div class="row">
        <!--- breadcrum Bar --->
        <div class="col s12 breadcrum-bar">
          <div class="card-white-panel ">

            <h3>Items
              <%= link_to "/ #{@status.humanize}",items_url(status: @status) %>

            </h3>
          </div>
        </div>
        <div class="invoice-box items-box mCustomScrollbar clearfix">
          <!--- Invoices Card Title--->
          <%= form_tag "items/bulk_actions", {method: :get, id: "bulk_action_form"} do -%>

        <% @items.group_by { |d| d.group_date }.each do |date, items| %>
                  <p><span class="activity-date"><%= date %></span></p>
                  <div class="clearfix">
                    <%
                      no_record_message = t('views.items.no_item_msg')
                      if params[:status] == "archived" || @action == "recovered from archived" ||  @action == "deleted from archived"
                        no_record_message = t('views.items.no_archived_msg')
                      elsif params[:status] == "deleted" || @action == "recovered from deleted"
                        no_record_message = t('views.items.no_deleted_msg')
                      end
                    %>
                    <% if items.length > 0 %>
                    <%= render partial: 'items',:collection => items,as: :item %>
                        <% else %>
                        <tr>
                          <td colspan="9">
                            <div class="no_record_container">
                              <%= no_record_message %>
                            </div>
                          </td>
                        </tr>
                        <% end %>
                  </div>
              <% end %>
              <%= render partial: 'bulk_actions'%>

        <% end %>


        </div>
      </div>
    </div>
  </div>
  </div>
  </div>


