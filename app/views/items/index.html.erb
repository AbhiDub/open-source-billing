<div id="sort_direction" style="display: none;"><%= params[:direction] %></div>
<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<div class="items">
  <div class="content_top">
    <div class="primary_heading">
      <h1>
        <%= t('header.links.items.items') %><span>&nbsp;/&nbsp;<%= t('views.common.active') %></span>
      </h1>
    </div>
    <div class="primary_btn">
      <%= link_to (content_tag(:span, t('header.links.items.new'))),
        new_item_path,
        :class => 'btn_large' %>
    </div>
  </div>
  <!--content_top-->
  <%= form_tag "items/bulk_actions", :remote => true do -%>
    <div class="content_middle">

      <div class="grid_control">
        <div class="grid_control_left">
          <ul value='item' id="bulk_actions">
            <%= render "bulk_actions" %>
          </ul>
        </div>

        <div class="grid_control_right" id="active_links">
          <%= render 'items/filter_links' %>
        </div>
      </div>
      <!--grid_control-->
      <div class="grid_table">
        <table cellpadding="0" cellspacing="0" class="table table_listing item_listing">
          <colgroup>
            <col class="one"/>
            <col class="two"/>
            <col class="three"/>
            <col class="four"/>
            <col class="five"/>
            <col class="six"/>
            <col class="seven"/>
            <col class="eight"/>
          </colgroup>
          <thead>
            <tr>
              <th class="align_center not-sortable"><%= check_box_tag 'select_all' %></th>
              <th class="align_left header"><%= sortable('item_name',t('views.items.name')) %></th>
              <th class="align_left header"><%= sortable('item_description',t('views.items.item_description')) %></th>
              <th class="align_right header"><%= sortable('unit_cost',t('views.items.unit_cost')) %></th>
              <th class="align_right header"><%= sortable('quantity',t('views.items.quantity')) %></th>
              <th class="align_center header"><%= sortable('tax1.name',"#{t('views.items.tax')} 1") %></th>
              <th class="align_center header"><%= sortable('tax2.name',"#{t('views.items.tax')} 2") %></th>
              <th class="align_center not-sortable"><%= t '.actions', :default => t("helpers.actions") %></th>
            </tr>
          </thead>
          <tbody id="item_body">
            <%= render 'items' %>
          <tfoot id="paging_links">
            <%= render "application_partials/paging" %>
          </tfoot>
          </tbody>
        </table>
      </div>
      <!--grid_table-->
    </div>
    <!--content_middle-->
    <div class="content_bottom">
      <%= link_to (content_tag(:span,  t('header.links.items.new'))),
        new_item_path,
        :class => 'btn_large' %>
    </div>
    <!--content_bottom-->
  <% end %>
</div><!--items-->