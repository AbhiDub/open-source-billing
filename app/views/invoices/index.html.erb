<%= render 'invoice_activity'%>
<div id="main-content" class='<%= "#{ 'side-show' if side_nav_opened?}"%>'>
  <!--- main content --->
  <div class="flex-wrapper">
    <!--- breadcrum Bar --->
    <div class="flex-item breadcrum-bar">
      <div class="card-white-panel">
        <h3>
          <span><%= link_to t('header.links.invoices.invoices'), invoices_url %> </span>
          <%= link_to "/ #{t('views.common.' + @status)}", 'javascript:;', class: 'active' %>
        </h3>
      </div>
    </div>
  </div>

  <div class="invoice-box mCustomScrollbar clearfix">
    <%= form_tag "invoices/bulk_actions", {method: :get, id: "bulk_action_form"} do -%>
      <div class="search_result_container"><%= render partial: 'invoices_container' %></div>
      <%= render partial: 'bulk_actions'%>
    <% end %>
  </div>

</div>
