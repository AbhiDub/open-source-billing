<%= render 'staff_activity'%>
<div id="main-content" class='<%= "#{ 'side-show' if side_nav_opened?}"%>'>
  <!--- main content --->
  <div class="flex-wrapper">
    <!--- breadcrum Bar --->
    <div class="flex-item breadcrum-bar">
      <div class="card-white-panel">
        <h3 class="heading_with_action">
          Time Tracking :
          <select onchange="location = this.value;">
            <option value="<%= "/#{I18n.locale}/projects" %>"> Projects</option>
            <option value="<%= "/#{I18n.locale}/tasks" %>">Tasks</option>
            <option value="<%= "/#{I18n.locale}/staffs" %>" selected>Staffs</option>
            <option value="<%= "/#{I18n.locale}/logs" %>">TimeSheet</option>
          </select>
          <%= link_to "/ #{@status.humanize}", 'javascript:;', class: 'active' %>
          <%= link_to raw('<i class="material-icons">add</i>'), new_staff_path, remote: true, class: 'right', title: 'Add' %>
        </h3>
      </div>
    </div>
  </div>

  <div class="invoice-box staff-box mCustomScrollbar clearfix">
    <%= form_tag bulk_actions_staffs_path, {method: :get, id: "bulk_action_form"} do -%>
        <div class="search_result_container"><%= render 'staffs_container' %> </div>
        <%= render partial: 'bulk_actions'%>
    <% end %>
  </div>

</div>
