<div class="task">
  <%= form_for @staff, :html => {:novalidate => "", :multipart => true,class: 'staff_form form-horizontal',:id => 'newStaff'} do |f| %>
      <div class="content_middle form">
        <div class="fields_content">
          <div class="fields_content_container">
            <% if @staff.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@staff.errors.count, "error") %> prohibited this staff from being saved:</h2>
                  <ul>
                    <% @staff.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>

            <div class="fields_content_data">

              <div class="field_row">
                <div class="label_field left single"><span><%= t('views.staffs.name') %></span></div>
                <div class="medium_field">
                  <%= f.text_field :name  %>
                </div>
              </div>
              <!--field_row-->

              <div class="field_row">
                <div class="label_field left single"><span><%= t('views.staffs.email') %></span></div>
                <div class="large_field">
                  <%= f.text_field :email %>
                </div>
              </div>
              <!--field_row-->

              <div class="field_row">
                <div class="label_field right single"><%= t('views.staffs.rate') %></div>
                <div class="small_field"><%= f.number_field :rate %></div>
              </div>
              <!--field_row-->

            </div>
            <!--fields_content_data-->
          </div>
          <!--fields_content_container-->
        </div>
        <!--fields_content-->
      </div>
      <!--content_middle-->

      <div class="content_bottom">
        <%= f.submit :class => "btn_large submit staff-submit-btn" %>
      </div>
  <% end %>
</div><!--staffs-->