<div class="content_top">
  <div class="primary_heading">
    <h1>Accounts</h1>
  </div>
</div>
<div class="content_middle">
  <div class="grid_table">
    <table class="full_width_table">
      <tr>
        <th class="serial_heading">Sr #</th>
        <th>Org Name</th>
        <th>Sub Domain</th>
        <th>Member Since</th>
        <th class="count_heading">Total Users</th>
      </tr>
      <% @accounts.each_with_index do |account, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= account.org_name %></td>
          <td><%= account.subdomain %></td>
          <td><%= account.created_at.to_date %></td>
          <td class="text-center"><%= account.users.count  %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
