<div class="content_top">
  <div class="primary_heading">
    <h1>Users</h1>
  </div>

</div>
<div class="content_middle">
  <div class="grid_table">
    <table class="full_width_table">
      <tr>
        <th class="serial_heading">Sr #</th>
        <th>Name</th>
        <th>Email</th>
        <th>Created At</th>
        <th>Account</th>
      </tr>
      <% @users.each_with_index do |user, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.created_at.to_date %></td>
            <td><%= Account.unscoped.where(id: user.account_id).first.org_name %></td>
          </tr>
      <% end %>
    </table>
  </div>
</div>