<div class="log_page">
  <div class="log_container">

    <div class="log_content">
      <div class="log_top">
        <h1>Try Open<span>Source</span>Billing</h1>
      </div>
      <!--log_top-->
      <%= form_tag action: 'landing',controller: 'dashboard' do %>

          <div class="log_fields">

            <div class="field_row">
              <div class="label_field"><%= label_tag :company %></div>
              <div class="medium_field">
                <%= text_field_tag :company,nil, autofocus: true, placeholder: "Enter your company", class: 'user_email', required: true %>
              </div>
            </div>
            <!--field_row-->

            <div class="field_row">
              <div class="label_field"><%= label_tag :email %></div>
              <div class="medium_field">
                <%= email_field_tag :email,nil, placeholder: "Enter your email",required: true %>
              </div>
            </div>
            <!--field_row-->
          </div>
          <!--log_fields-->
          <div class="log_btm">
            <%= submit_tag "Submit", class: "btn_large submit" %>
          </div>
          <!--log_btm-->

          </div><!--log_content-->
      <% end %>

      <div class="log_footer">
        <a class="site_link" href="http://opensourcebilling.org">www.opensourcebilling.org</a>

        <p class="team_link">powered by: <a href="http://vteams.com">vteams.com</a></p>
      </div>


      </div>
  <!--log_container-->
</div><!--log_page-->